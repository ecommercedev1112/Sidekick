{{ 'custom-normalize.css' | asset_url | stylesheet_tag }}
{{ 'custom-components.css' | asset_url | stylesheet_tag }}

<style>
.section-hero{
   height: 90vh;
    
    background-position: 50%;
    background-size: cover;
    position: relative;
} 


</style>

<script
    src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=6410ad7be5821545088ab2a6"
    type="text/javascript"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>

<div
    data-delay="{{section.settings.delay}}"
    data-animation="{{section.settings.slide_animation}}"
    class="slider-2 w-slider"
    data-autoplay="true"
    data-easing="ease"
    data-hide-arrows="false"
    data-disable-swipe="false"
    data-autoplay-limit="0"
    data-nav-spacing="3"
    data-duration="500"
    data-infinite="true"
  >
    <div class="w-slider-mask">
      {% for block in section.blocks %}
        <div class="w-slide">
          <div
            class="section-hero _1"
            style="display: block; background-image: url('{% if block.settings.image %}{{ block.settings.image | image_url }}{%else%}https://cdn.shopify.com/s/files/1/0272/6992/2952/files/complete-broadcast-media-set-with-desk-new.jpg?v=1685553310');{%endif%}"
          > </div>
        </div>
      {% endfor %}
    </div>
    <div class="hidden-arrow w-slider-arrow-left">
      <div style="display: block;" class="icon-3 w-icon-slider-left"></div>
    </div>
    <div class="hidden-arrow w-slider-arrow-right">
      <div style="display: block;" class="icon-2 w-icon-slider-right"></div>
    </div>
    <div style="display: flex;" class="w-slider-nav flex"></div>
  </div>
  


  {%- comment -%}
    "tag": "section",
    "class": "section",

        "presets": [
        {
          "name": "Custom Slider"
        }
      ]
{%- endcomment -%}
  {% schema %}
  {
    "name": "Custom Slider",

    "settings": [
      {
        "type": "range",
        "id": "delay",
        "label": "Slide Delay In Milliseconds",
        "min": 500,
        "max": 8000,
        "step": 500,
        "default": 2000
      },
      {
        "type": "radio",
        "id": "slide_animation",
        "label": "Slide Animation",
        "options": [
          {
            "value": "slide",
            "label": "Slide"
          },
          {
            "value": "cross",
            "label": "Cross Fade"
          },
          {
            "value": "outin",
            "label": "Fade In Out"
          },
          {
            "value": "fade",
            "label": "Fade Over"
          },
          {
            "value": "over",
            "label": "Slide Over"
          }
        ],
        "default": "cross"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Slide",
        "settings": [
          {
            "label": "Slider Image",
            "id": "image",
            "type": "image_picker"
          }
        ]
      }
    ]
  }
  {% endschema %}
  